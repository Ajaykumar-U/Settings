<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/settingsLandingFragment">

    <!-- Landing Fragment -->
    <fragment
        android:id="@+id/settingsLandingFragment"
        android:name="com.android.car.settings.presentation.settings.SettingsLandingFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings_landing">

        <action
            android:id="@+id/action_settingsLanding_to_general"
            app:destination="@id/generalSettingsFragment" />
        <action
            android:id="@+id/action_settingsLandingFragment_to_ambientLight"
            app:destination="@id/ambientLightFragment" />
        <action
            android:id="@+id/action_settingsLandingFragment_to_alexa"
            app:destination="@id/alexaFragment" />
        <action
            android:id="@+id/action_settingsLandingFragment_to_media"
            app:destination="@id/mediaFragment" />
        <action
            android:id="@+id/action_settingsLandingFragment_to_connectivity"
            app:destination="@id/connectivityFragment" />
        <action
            android:id="@+id/action_settingsLandingFragment_to_mySpace"
            app:destination="@id/mySpaceFragment" />
        <action
            android:id="@+id/action_settingsLandingFragment_to_notification"
            app:destination="@id/notificationFragment" />
    </fragment>

    <!-- General Settings Fragment -->
    <fragment
        android:id="@+id/generalSettingsFragment"
        android:name="com.android.car.settings.presentation.general.GeneralSettingsFragment"
        android:label="General"
        tools:layout="@layout/fragment_general_settings">

        <action
            android:id="@+id/action_general_to_factoryReset"
            app:destination="@id/factoryResetFragment" />
    </fragment>

    <!-- Factory Reset -->
    <fragment
        android:id="@+id/factoryResetFragment"
        android:name="com.android.car.settings.presentation.general.factoryreset.FactoryResetFragment"
        android:label="FactoryReset"
        tools:layout="@layout/fragment_factory_reset" />
    <fragment
        android:id="@+id/ambientLightFragment"
        android:name="com.android.car.settings.presentation.ambientlight.AmbientLightFragment"
        android:label="Ambient Light"
        tools:layout="@layout/fragment_ambient_light" />
    <fragment
        android:id="@+id/alexaFragment"
        android:name="com.android.car.settings.presentation.alexa.AlexaFragment"
        android:label="Alexa"
        tools:layout="@layout/fragment_alexa" />
    <fragment
        android:id="@+id/mediaFragment"
        android:name="com.android.car.settings.presentation.media.MediaFragment"
        android:label="Media"
        tools:layout="@layout/fragment_media" />
    <fragment
        android:id="@+id/connectivityFragment"
        android:name="com.android.car.settings.presentation.connectivity.ConnectivityFragment"
        android:label="Connectivity"
        tools:layout="@layout/fragment_connectivity" />
    <fragment
        android:id="@+id/mySpaceFragment"
        android:name="com.android.car.settings.presentation.myspace.MySpaceFragment"
        android:label="MySpace"
        tools:layout="@layout/fragment_my_space" />
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.android.car.settings.presentation.notification.NotificationFragment"
        android:label="Notification"
        tools:layout="@layout/fragment_notification" />
</navigation>